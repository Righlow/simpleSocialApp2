<h2>Posts</h2>
<ul>
<% posts.forEach(post => { %>
    <li>
        <%= post.message %> (by <%= post.username %>)

        <form method="POST" action="/admin/deletepost/<%= post._id %>">
            <button type="submit">Delete</button>
        </form>
    </li>
<% }) %>
</ul>

